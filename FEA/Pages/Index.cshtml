@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container-fluid background1 stickyPanel">
    <div class="row">
        <div class="col-md">
            <div class="container">
                <div class="row first">
                    <div class="col-md">
                        <div class="container">
                            <div class="row">
                                <div class="col-md">
                                    <h1>
                                        <i class="fas fa-angle-double-right"></i> Offering the support your college needs
                                    </h1>
                                    <p>
                                        FEA can provide interim support in crucial areas such as MIS, Finance and Quality as well
                                        as help with permanent recruitment to key roles within the organisation with a proven
                                        track record of delivering results.
                                    </p>
                                    <p>
                                        We have a team of permanently employed consultants who possess the skills and expertise needed
                                        to deliver results quickly and have a good understanding of systems and processes within
                                        further education establishments.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-4 col-sm text-center twitter">
                        <a class="twitter-timeline" href="https://twitter.com/FEInsights?ref_src=twsrc%5Etfw">Tweets by FEInsights</a>
                        <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="rangeOfServices" class="container-fluid background1 stickyPanel">
    <div class="row">
        <div class="col-md">
            <div class="container">
                <div class="row first">
                    <div class="col-md">
                        <h1>
                            <i class="fas fa-angle-double-right"></i> A range of services to support further education colleges nationally.
                        </h1>
                        <h2>
                            Please click below for further information on a particular service:
                        </h2>
                    </div>
                </div>
            </div>

            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-sm-6">
                        <div id="service1" class="servicesBox colour1 servicesBoxPreAnim">
                            <a href="#">
                                <div class="icon">
                                    <i class="fas fa-user-tie"></i>
                                </div>
                                <h3>Executive<br />Recruitment</h3>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6">
                        <div id="service2" class="servicesBox colour2 servicesBoxPreAnim">
                            <a href="~/Services/MISSpecialists">
                                <div class="icon">
                                    <i class="fas fa-chart-bar"></i>
                                </div>
                                <h3>MIS<br />Specialists</h3>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6">
                        <div id="service3" class="servicesBox colour6 servicesBoxPreAnim">
                            <a href="#">
                                <div class="icon">
                                    <i class="fas fa-pound-sign"></i>
                                </div>
                                <h3>Finance<br />Specialists</h3>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6">
                        <div id="service4" class="servicesBox colour3 servicesBoxPreAnim">
                            <a href="#">
                                <div class="icon">
                                    <i class="fas fa-chart-line"></i>
                                </div>
                                <h3>Quality<br />Improvement</h3>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6">
                        <div id="service5" class="servicesBox colour4 servicesBoxPreAnim">
                            <a href="#">
                                <div class="icon">
                                    <i class="fas fa-search-plus"></i>
                                </div>
                                <h3>Ofsted<br />Readiness</h3>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6">
                        <div id="service6" class="servicesBox colour5 servicesBoxPreAnim">
                            <a href="#">
                                <div class="icon">
                                    <i class="fas fa-graduation-cap"></i>
                                </div>
                                <h3>Staff<br />Training</h3>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid background1 stickyPanel">
    <div class="row">
        <div class="col-md">
            <div class="container">
                <div class="row first">
                    <div class="col-md">
                        <h1>
                            <i class="fas fa-angle-double-right"></i> Vacancies
                        </h1>
                        <p>
                            We are seeking staff for a number of positions within colleges around the UK:
                        </p>
                        <div id="jobCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
                            <ol class="carousel-indicators">
                                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                <li data-target="#myCarousel" data-slide-to="1"></li>
                                <li data-target="#myCarousel" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner" role="listbox">
                                <div class="carousel-item active">
                                    <img src="~/images/CollegeLogos/SouthTynesideCollege.png" alt="SouthTyneside College" class="img-fluid" />
                                    <h1>
                                        Director of Something
                                    </h1>
                                    <h2>
                                        This is an exciting role to...
                                    </h2>
                                </div>
                                <div class="carousel-item">
                                    <img src="~/images/CollegeLogos/WestLondonCollege.png" alt="West London College" class="img-fluid" />
                                    <h1>
                                        Director of Something Else
                                    </h1>
                                    <h2>
                                        This is an exciting role to...
                                    </h2>
                                </div>
                                <div class="carousel-item">
                                    <img src="~/images/CollegeLogos/KensingtonAndChelseaCollege.png" alt="Kensington and Chelsea College" class="img-fluid" />
                                    <h1>
                                        Director of Another Thing
                                    </h1>
                                    <h2>
                                        This is an exciting role to...
                                    </h2>
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#jobCarousel" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#jobCarousel" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <div class="container">
                            <div class="row">
                                <div class="col-md">
                                </div>
                                <div class="col-md text-center">
                                    <button type="submit" class="btn btn-primary btn-block"><i class="fas fa-briefcase"></i> View all vacancies</button>
                                </div>
                                <div class="col-md">
                                </div>
                            </div>
                        </div>
                        <br />
                        <br />
                        <br />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid background2 boxSpacer stickyPanel">
    <div class="row">
        <div class="col-md">
            <div class="container">
                <div class="row">
                    <div class="col-md">
                        <h1>
                            <i class="fas fa-angle-double-right"></i> Contact us
                        </h1>
                        <p>
                            If you would like to see how we may help you, please contact us using the form below:
                        </p>
                        <form>
                            <div class="container">
                                <div class="row">
                                    <div class="col-md">
                                        <div class="form-group">
                                            <label for="inputName"><i class="fas fa-user"></i> Name</label>
                                            <input type="email" class="form-control" id="inputName" placeholder="Your name">
                                        </div>
                                        <div class="form-group">
                                            <label for="inputCollege"><i class="fas fa-hotel"></i> College</label>
                                            <input type="password" class="form-control" id="inputCollege" placeholder="Your college">
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail"><i class="fas fa-at"></i> Email</label>
                                            <input type="email" class="form-control" id="inputEmail" aria-describedby="inputNameHelp" placeholder="Your email">
                                            <small id="inputEmailHelp" class="form-text text-muted">We will never share your email with anyone else.</small>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputPhone"><i class="fas fa-phone"></i> Phone Number</label>
                                            <input type="tel" class="form-control" id="inputPhone" placeholder="Your phone number">
                                        </div>
                                    </div>
                                    <div class="col-md">
                                        <div class="form-group">
                                            <label for="inputEnquiry"><i class="fas fa-edit"></i> Enquiry</label>
                                            <textarea class="form-control enquiry" id="inputEnquiry" placeholder="Your enquiry"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="container">
                                <div class="row">
                                    <div class="col-md">
                                    </div>
                                    <div class="col-md text-center">
                                        <button type="submit" class="btn btn-primary btn-block"><i class="fas fa-pencil-alt"></i> Submit your enquiry</button>
                                    </div>
                                    <div class="col-md">
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>